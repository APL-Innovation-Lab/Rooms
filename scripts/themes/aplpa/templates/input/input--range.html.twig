{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{% if attributes.hasAttribute('min') %}
  {% do attributes.setAttribute('aria-valuemin', attributes.min) %}
{% endif %}
{% if attributes.hasAttribute('max') %}
  {% do attributes.setAttribute('aria-valuemax', attributes.max) %}
{% endif %}
{% if attributes.hasAttribute('value') %}
  {% do attributes.setAttribute('aria-valuenow', attributes.value) %}
{% endif %}

{% if input_group %}
  <div class="input-group usa-form-group">
{% endif %}

{% if prefix %}
  {{ prefix }}
{% endif %}

{% block input %}
  <input{{ attributes.addClass('usa-range').setAttribute('role', 'slider') }} />
{% endblock %}

{% if suffix %}
  {{ suffix }}
{% endif %}

{% if input_group %}
  </div>
{% endif %}

{{ children }}
